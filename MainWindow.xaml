                                        <StackPanel Margin="4,0,0,0" Orientation="Vertical">
                                            <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                                <TextBox x:Name="TBoxSetsPosX" Width="128" Height="24" Margin="0,0,0,0" TextChanged="TBoxSetsPosX_TextChanged" LostFocus="TBoxSetsPosX_LostFocus">
                                                    <TextBox.ToolTip>
                                                        <ToolTip Content="Horizontal window position."/>
                                                    </TextBox.ToolTip>
                                                </TextBox>
                                                <Button x:Name="BtnSetsPos" Width="96" Height="24" Margin="4,0,0,0" Content="Apply" Click="BtnSetsPos_Click">
                                                    <Button.ToolTip>
                                                        <ToolTip Content="Apply changes to current window position."/>
                                                    </Button.ToolTip>
                                                </Button>
                                            </StackPanel>
                                            <TextBox x:Name="TBoxSetsPosY" Width="128" Height="24" Margin="0,4,0,0" TextChanged="TBoxSetsPosY_TextChanged" LostFocus="TBoxSetsPosY_LostFocus">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="Vertical window position."/>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                            <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                                <TextBox x:Name="TBoxSetsSizeX" Width="128" Height="24" Margin="0,0,0,0" TextChanged="TBoxSetsSizeX_TextChanged" LostFocus="TBoxSetsSizeX_LostFocus">
                                                    <TextBox.ToolTip>
                                                        <ToolTip Content="Horizontal window size."/>
                                                    </TextBox.ToolTip>
                                                </TextBox>
                                                <Button x:Name="BtnSetsSize" Width="96" Height="24" Margin="4,0,0,0" Content="Apply" Click="BtnSetsSize_Click">
                                                    <Button.ToolTip>
                                                        <ToolTip Content="Apply changes to current window size."/>
                                                    </Button.ToolTip>
                                                </Button>
                                            </StackPanel>
                                            <TextBox x:Name="TBoxSetsSizeY" Width="128" Height="24" Margin="0,4,0,0" TextChanged="TBoxSetsSizeY_TextChanged" LostFocus="TBoxSetsSizeY_LostFocus">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="Vertical window size."/>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Help">
                <Grid>
                    <Border Margin="4,4,4,4" Padding="4,4,4,4" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2" SnapsToDevicePixels="true">
                        <RichTextBox x:Name="RTBoxHelp" Background="Transparent" BorderThickness="0" Foreground="#FFE0E0E0" FontSize="14" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
