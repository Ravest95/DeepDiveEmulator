                                            <ComboBox x:Name="CBoxDDEliAno2" Width="128" Height="26" Canvas.Left="500" Canvas.Top="162"/>
                                            <ComboBox x:Name="CBoxDDEliAno3" Width="128" Height="26" Canvas.Left="500" Canvas.Top="192"/>
                                        </Canvas>
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Border>
                    <Border BorderBrush="#FF202020" BorderThickness="4,4,4,4" Margin="8,8,8,8" Grid.Row="2" Padding="8,8,8,8">
                        <TextBlock TextWrapping="Wrap" Foreground="#FFFF4040" FontWeight="Normal" FontSize="14" Text="Deep Dive and Deep Dive Elite are created using the seed number. Every game version will interpret the seed differently on its own and using Event, resulting in completely different Deep Dive. To maintain original Deep Dive parameters, you must use the original or compatible game version and original Event. A panel that contains Deep Dive parameters, will not influence Deep Dive in any way. It is a way to record information, not change it."/>
                    </Border>
                    <Border BorderThickness="0" Background="#FF202020" Grid.Column="1" Grid.RowSpan="3" Margin="8,8,8,8">
                        <TabControl BorderThickness="4,0,4,4" Background="#FF404040" BorderBrush="#FF202020">
                            <TabItem Header="Deep Dives">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="42"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="38"/>
                                        <RowDefinition Height="38"/>
                                    </Grid.RowDefinitions>
                                    <TextBox x:Name="TBoxDeepDiveSearch" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="8,8,8,8" TextChanged="TBoxDeepDiveSearch_TextChanged" Cursor="" Tag="Search: Number, Tag, Name, Seed, Mission Parameter"/>
                                    <ListView x:Name="ListViewDeepDives" SelectionMode="Single" Grid.ColumnSpan="2" Grid.Row="1" Margin="8,0,8,0" BorderThickness="2" BorderBrush="#FF202020" Background="#FF404040" Foreground="Silver" FontSize="16" FontWeight="Bold" SelectionChanged="ListViewDeepDives_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{Binding BrushBorder}" BorderThickness="2,2,2,2">
                                                    <StackPanel Orientation="Horizontal" Background="{Binding BrushBackground}">
                                                        <Label Content="{Binding IdFake}" Width="52" Height="28" FontSize="16" />
                                                        <Label Content="{Binding Date}" Width="0" Height="28" FontSize="16"/>
                                                        <Label Content="{Binding NameNormal}" Width="176" Height="28" FontSize="16"/>
                                                        <Label Content="{Binding NameElite}" Height="28" FontSize="16"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                    <Button x:Name="ButtonDeepDiveDeselect" Grid.Row="2" Grid.ColumnSpan="2" Margin="8,8,8,4" Content="Deselect" Click="ButtonDeepDiveDeselect_Click"/>
                                    <Button x:Name="ButtonDeepDiveAdd" Grid.Row="3" Margin="8,4,4,8" Content="Add" Click="ButtonDeepDiveAdd_Click"/>
                                    <Button x:Name="ButtonDeepDiveRemove" Grid.Column="1" Grid.Row="3" Margin="4,4,8,8" Content="Remove" IsEnabled="False"/>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Event">
                <Grid x:Name="GridEvent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.25*"/>
                        <RowDefinition Height="0.6*"/>
                        <RowDefinition Height="0.15*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.4*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderBrush="#FF202020" BorderThickness="4,4,4,4" Margin="8,8,8,8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <Canvas Width="297" Height="98" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,8,8,8">
                                <Label Height="26" Canvas.Left="0" Canvas.Top="0" Content="Command"/>
                                <TextBox x:Name="TBoxEventCommand" Width="128" Height="26" Canvas.Left="69" Canvas.Top="0" TextChanged="TextBoxEventCommand_TextChanged"/>
                                <Button x:Name="ButtonEventCommand" Width="96" Height="26" Canvas.Left="201" Canvas.Top="0" Content="Clear" Click="ButtonEventCommandClear_Click"/>
                                <CheckBox x:Name="CBoxFreeBeers" BorderThickness="2" Canvas.Top="30" Height="26" VerticalContentAlignment="Center" Padding="0,0,0,0" BorderBrush="#FF202020" Background="Silver" FontSize="14" Canvas.Left="0" Foreground="#FF202020" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CheckBoxFreeBeers_Click">
                                    <Label Content="Free Beers" Height="26" Margin="4,0,0,0"/>
                                </CheckBox>
                                <CheckBox x:Name="CBoxLostEvents" BorderThickness="2" Height="26" VerticalContentAlignment="Center" Padding="0,0,0,0" BorderBrush="#FF202020" Background="Silver" FontSize="14" Foreground="#FF202020" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="0" Canvas.Top="72" Click="CBoxLostEvents_Click">
                                    <Label Content="Show Lost Events" Height="26" Margin="4,0,0,0"/>
                                </CheckBox>
                            </Canvas>
                        </ScrollViewer>
                    </Border>
                    <Border BorderBrush="#FF202020" BorderThickness="4,4,4,4" Margin="8,8,8,8" Padding="8,8,8,8" Grid.Row="1">
                        <ListView x:Name="ListViewEventItems" BorderThickness="2,2,2,2" BorderBrush="#FF202020" Background="#FF404040" Foreground="Silver" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{Binding Type}" Width="144" Height="28"/>
                                        <Label Content="{Binding Name}" Height="28"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Border>
                    <Border BorderBrush="#FF202020" BorderThickness="4,4,4,4" Margin="8,8,8,8" Grid.Row="2" Padding="8,8,8,8">
                        <TextBlock TextWrapping="Wrap" Foreground="#FFFF4040" FontWeight="Normal" FontSize="14" Text="Event is created using the command (Event #10 and after) or using game files (Event #9 and before). Every game version has its own list, consisting of one or several supported Events. Certain Events will influence Deep Dive creation."/>
                    </Border>
                    <Border BorderThickness="0" Background="#FF202020" Margin="8,8,8,8" Grid.Column="1" Grid.RowSpan="3">
                        <TabControl BorderThickness="4,0,4,4" Background="#FF404040" BorderBrush="#FF202020">
                            <TabItem Header="Events">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="42"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="38"/>
                                        <RowDefinition Height="38"/>
                                    </Grid.RowDefinitions>
                                    <TextBox x:Name="TextBoxEventSearch" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="8,8,8,8" TextChanged="TextBoxEventSearch_TextChanged" Tag="Search: Number, Year, Name"/>
                                    <ListView x:Name="ListViewEvent" Grid.ColumnSpan="2" Grid.Row="1" Margin="8,0,8,0" BorderThickness="2,2,2,2" BorderBrush="#FF202020" Background="#FF404040" Foreground="Silver" FontSize="16" FontWeight="Bold" SelectionChanged="ListViewEvent_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#FF202020" BorderThickness="2,2,2,2">
                                                    <StackPanel Orientation="Horizontal" Background="{Binding Brush}">
                                                        <Label Content="{Binding IdFake}" Width="32" Height="28" FontSize="16"/>
                                                        <Label Content="{Binding Year}" Width="48" Height="28" FontSize="16"/>
                                                        <Label Content="{Binding Name}" Height="28" FontSize="16"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="{x:Type ListViewItem}">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                    </ListView>
                                    <Button x:Name="ButtonEventDeselect" Grid.Row="2" Grid.ColumnSpan="2" Margin="8,8,8,4" Content="Deselect" Click="ButtonEventDeselect_Click"/>
                                    <Button x:Name="ButtonEventAdd" Grid.Row="3" Margin="8,4,4,8" Content="Add" IsEnabled="False"/>
                                    <Button x:Name="ButtonEventRemove" Grid.Column="1" Grid.Row="3" Margin="4,4,8,8" Content="Remove" IsEnabled="False"/>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Assignment">
                <Grid x:Name="GridAssignment">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.85*"/>
                        <RowDefinition Height="0.15*"/>
                    </Grid.RowDefinitions>
                    <Border BorderBrush="#FF202020" BorderThickness="4,4,4,4" Margin="8,8,8,8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <Canvas Height="26" Width="266" Margin="8,8,8,8" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Height="26" Canvas.Left="0" Canvas.Top="0" Content="Seed"/>
                                <TextBox x:Name="TBoxAssSeed" Width="128" Height="26" Canvas.Left="37" Canvas.Top="0" TextChanged="TBoxAssSeed_TextChanged" LostFocus="TBoxAssSeed_LostFocus"/>
                                <Button x:Name="ButtonAssSeed" Width="96" Height="26" Canvas.Left="169" Content="Generate" Click="ButtonAssSeed_Click"/>

                            </Canvas>
                        </ScrollViewer>
                    </Border>
                    <Border BorderBrush="#FF202020" BorderThickness="4" Margin="8" Grid.Row="1" Padding="8">
                        <TextBlock TextWrapping="Wrap" Foreground="#FFFF4040" Text="Weekly Priority Assignment and Weekly Core Hunt are created using the Seed number. Missions that are used in the assignment are generated randomly by the game." FontWeight="Normal" FontSize="14"/>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid>
                    <Border BorderBrush="#FF202020" BorderThickness="4" Margin="8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <Canvas Height="214" Width="311" Margin="8" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Label Height="26" Canvas.Left="0" Canvas.Top="0" Content="Window"/>
                                <Label Height="26" Canvas.Left="16" Canvas.Top="30" Content="Position X"/>
                                <TextBox x:Name="TBoxPosX" Width="128" Height="26" Canvas.Left="83" Canvas.Top="30" TextChanged="TBoxPosX_TextChanged" LostFocus="TBoxPosX_LostFocus"/>
                                <Label Height="26" Canvas.Left="16" Canvas.Top="60" Content="Position Y"/>
                                <Button x:Name="ButtonPosApply" Width="96" Height="26" Canvas.Left="215" Canvas.Top="30" Content="Apply" Click="ButtonPositionApply_Click"/>
                                <TextBox x:Name="TBoxPosY" Width="128" Height="26" Canvas.Left="83" Canvas.Top="60" TextChanged="TBoxPosY_TextChanged" LostFocus="TBoxPosY_LostFocus"/>
                                <Label Height="26" Canvas.Left="16" Canvas.Top="90" Content="Size X"/>
                                <TextBox x:Name="TBoxSizeX" Width="128" Height="26" Canvas.Left="83" Canvas.Top="90" TextChanged="TBoxSizeX_TextChanged" LostFocus="TBoxSizeX_LostFocus"/>
                                <Label Height="26" Canvas.Left="16" Canvas.Top="120" Content="Size Y"/>
                                <Button x:Name="ButtonSizeApply" Width="96" Height="26" Canvas.Left="215" Canvas.Top="90" Content="Apply" Click="ButtonSizeApply_Click"/>
                                <TextBox x:Name="TBoxSizeY" Width="128" Height="26" Canvas.Left="83" Canvas.Top="120" TextChanged="TBoxSizeY_TextChanged" LostFocus="TBoxSizeY_LostFocus"/>
                                <Label Height="26" Canvas.Left="0" Canvas.Top="162" Content="Tabs"/>
                                <CheckBox x:Name="CBoxHideNotes" BorderThickness="2" Canvas.Top="188" Height="26" VerticalContentAlignment="Center" Padding="0,0,0,0" BorderBrush="#FF202020" Background="Silver" FontSize="14" Foreground="#FF202020" Canvas.Left="16" HorizontalAlignment="Left" VerticalAlignment="Top" Click="CBoxHideNotes_Click">
                                    <Label Height="26" Margin="4,0,0,0" Content="Hide Notes"/>
                                </CheckBox>
                            </Canvas>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Help">
                <Grid>
                    <Border BorderBrush="#FF202020" BorderThickness="4,4,4,4" Margin="8,8,8,8">
                        <RichTextBox x:Name="Help" IsReadOnly="True" Background="{x:Null}" VerticalScrollBarVisibility="Visible" BorderThickness="0" Foreground="#FFE0E0E0" BorderBrush="{x:Null}" Margin="8,8,8,8">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text="RichTextBox"/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
