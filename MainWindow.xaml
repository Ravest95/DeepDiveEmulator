<Window x:Class="DeepDiveEmulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeepDiveEmulator"
        mc:Ignorable="d"
        Title="DeepDiveEmulator"
        Width="1280"
        Height="800" 
        MinWidth="800"
        MinHeight="600"
        Initialized="Window_Initialized"
        Closed="Window_Closed"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged" Icon="/Resources/DeepDiveEmulator.ico" Background="{DynamicResource Brush.Window.Background}" WindowStyle="None" Activated="Window_Activated" Deactivated="Window_Deactivated">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="BorderLeft" Grid.Column="0" Grid.RowSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Rectangle x:Name="RectOutlineLeft" Width="1" HorizontalAlignment="Left" Grid.ColumnSpan="2" Fill="#ffffff"/>
            <Rectangle x:Name="RectResizeLeft" Width="{x:Static SystemParameters.ResizeFrameVerticalBorderWidth}" Grid.Column="0"/>
            <Rectangle x:Name="RectFixedLeft" Width="{x:Static SystemParameters.FixedFrameVerticalBorderWidth}" Grid.Column="1"/>
        </Grid>
        <Grid x:Name="BorderRight" Grid.Column="2" Grid.RowSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Rectangle x:Name="RectFixedRight" Width="{x:Static SystemParameters.FixedFrameVerticalBorderWidth}" Grid.Column="0"/>
            <Rectangle x:Name="RectResizeRight" Width="{x:Static SystemParameters.ResizeFrameVerticalBorderWidth}" Grid.Column="1"/>
            <Rectangle x:Name="RectOutlineRight" Width="1" HorizontalAlignment="Right" Grid.ColumnSpan="2" Fill="{DynamicResource Brush.Window.Border}"/>
        </Grid>
        <Grid x:Name="BorderTop" Grid.Row="0" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Rectangle x:Name="RectOutlineTop" Height="1" VerticalAlignment="Top" Grid.RowSpan="2" Fill="{DynamicResource Brush.Window.Border}"/>
            <Rectangle x:Name="RectResizeTop" Height="{x:Static SystemParameters.ResizeFrameHorizontalBorderHeight}" Grid.Row="0"/>
            <Rectangle x:Name="RectFixedTop" Height="{x:Static SystemParameters.FixedFrameHorizontalBorderHeight}" Grid.Row="1"/>
        </Grid>
        <Grid x:Name="BorderBottom" Grid.Row="3" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Rectangle x:Name="RectFixedBottom" Height="{x:Static SystemParameters.FixedFrameHorizontalBorderHeight}" Grid.Row="0"/>
            <Rectangle x:Name="RectResizeBottom" Height="{x:Static SystemParameters.ResizeFrameHorizontalBorderHeight}" Grid.Row="1"/>
            <Rectangle x:Name="RectOutlineBottom" Height="1" VerticalAlignment="Bottom" Grid.RowSpan="2" Fill="{DynamicResource Brush.Window.Border}"/>
        </Grid>
        <Border x:Name="TitleBar" Height="32" Grid.Row="1" Grid.Column="1" Background="#FF404040" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2" MouseDown="StackPanel_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Margin="2,2,2,2" Source="/Resources/DeepDiveEmulator.ico"/>
                    <Label x:Name="LblTitle" Margin="2,0,0,0" Content="Title"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnMinimize" Style="{DynamicResource MinimizeButtonStyle}" Click="MinimizeWindow" KeyboardNavigation.IsTabStop="False" />
                    <Button x:Name="BtnMaximize" Style="{DynamicResource MaximizeButtonStyle}" Click="MaximizeClick" KeyboardNavigation.IsTabStop="False" />
                    <Button x:Name="BtnClose"  Style="{DynamicResource CloseButtonStyle}" Click="CloseButton_Click" KeyboardNavigation.IsTabStop="False" />
                </StackPanel>
            </Grid>
        </Border>
        <TabControl x:Name="Content" Grid.Column="1" Grid.Row="2">
            <TabItem Header="Services">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.75*"/>
                        <RowDefinition Height="0.25*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Margin="4,4,4,4" Padding="4,4,4,4" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2" SnapsToDevicePixels="true">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                    <Label Height="24" Margin="0,0,0,0" FontWeight="Bold" Content="Website Redirects:"/>
                                    <StackPanel Margin="16,4,0,0" Orientation="Vertical">
                                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                            <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                                <Label Height="24" Margin="0,0,0,0" Content="IP Address"/>
                                            </StackPanel>
                                            <StackPanel Margin="4,0,0,0" Orientation="Vertical">
                                                <TextBox x:Name="TBoxSvcsRedsIP" Width="128" Height="24" Margin="0,0,0,0" TextChanged="TBoxSvcsRedsIP_TextChanged">
                                                    <TextBox.ToolTip>
                                                        <ToolTip Content="IP address that is used by server for broadcasting website. `127.0.0.1` will broadcast only to your PC."/>
                                                    </TextBox.ToolTip>
                                                </TextBox>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                            <Button x:Name="BtnSvcsRedsAdd" Width="96" Height="24" Margin="0,0,0,0" Content="Add" Click="BtnSvcsRedsAdd_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Add website redirects to the Windows hosts file."/>
                                                </Button.ToolTip>
                                            </Button>
                                            <Button x:Name="BtnSvcsRedsRemove" Width="96" Height="24" Margin="4,0,0,0" Content="Remove" Click="BtnSvcsRedsRemove_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Remove website redirects from the Windows hosts file."/>
                                                </Button.ToolTip>
                                            </Button>
                                            <Button x:Name="BtnSvcsRedsOpen" Width="96" Height="24" Margin="4,0,0,0" Content="Open Folder" Click="BtnSvcsRedsOpen_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Open folder with Windows hosts file to manually add website redirects."/>
                                                </Button.ToolTip>
                                            </Button>
                                        </StackPanel>
                                        <CheckBox x:Name="CBoxSvcsRedsChange" Height="24" Margin="0,4,0,0" Content="Add/remove redirects on launch/close" Click="CBoxSvcsRedsChange_Click">
                                            <CheckBox.ToolTip>
                                                <ToolTip Content="Add website redirects automatically on program launch and remove on program close."/>
                                            </CheckBox.ToolTip>
                                        </CheckBox>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,16,0,0" Orientation="Vertical">
                                    <Label Height="24" Margin="0,0,0,0" FontWeight="Bold" Content="Website Certificates:"/>
                                    <StackPanel Margin="16,4,0,0" Orientation="Vertical">
                                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                            <Button x:Name="BtnSvcsCertsAdd" Width="96" Height="24" Margin="0,0,0,0" Content="Add" Click="BtnSvcsCertsAdd_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Add website certificates to the system."/>
                                                </Button.ToolTip>
                                            </Button>
                                            <Button x:Name="BtnSvcsCertsRemove" Width="96" Height="24" Margin="4,0,0,0" Content="Remove" Click="BtnSvcsCertsRemove_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Remove website certificates from the system."/>
                                                </Button.ToolTip>
                                            </Button>
                                            <Button x:Name="BtnSvcsCertsOpen" Width="96" Height="24" Margin="4,0,0,0" Content="Open Folder" Click="BtnSvcsCertsOpen_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Open folder with files to manually add website certificates."/>
                                                </Button.ToolTip>
                                            </Button>
                                        </StackPanel>
                                        <CheckBox x:Name="CBoxSvcsCertsChange" Height="24" Margin="0,4,0,0" Content="Add/remove certificates on launch/close" Click="CBoxSvcsCertsChange_Click">
                                            <CheckBox.ToolTip>
                                                <ToolTip Content="Add website certificates automatically on program launch and remove on program close."/>
                                            </CheckBox.ToolTip>
                                        </CheckBox>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,16,0,0" Orientation="Vertical">
                                    <Label Height="24" Margin="0,0,0,0" FontWeight="Bold" Content="Website Server:"/>
                                    <StackPanel Margin="16,4,0,0" Orientation="Vertical">
                                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                            <Button x:Name="BtnSvcsServStart" Width="96" Height="24" Margin="0,0,0,0" Content="Start" Click="BtnSvcsServStart_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Start private server with website for the game."/>
                                                </Button.ToolTip>
                                            </Button>
                                            <Button x:Name="BtnSvcsServStop" Width="96" Height="24" Margin="4,0,0,0" Content="Stop" Click="BtnSvcsServStop_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Stop private server with website for the game."/>
                                                </Button.ToolTip>
                                            </Button>
                                        </StackPanel>
                                        <CheckBox x:Name="CBoxSvcsServChange" Height="24" Margin="0,4,0,0" Content="Start server on launch" Click="CBoxSvcsServChange_Click">
                                            <CheckBox.ToolTip>
                                                <ToolTip Content="Start private server automatically on program launch."/>
                                            </CheckBox.ToolTip>
                                        </CheckBox>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    <Border Grid.Row="1" Margin="4,4,4,4" Padding="4,4,4,4" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2" SnapsToDevicePixels="true">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                    <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                        <CheckBox x:Name="CBoxSvcsRedsAdded" Height="24" Margin="0,0,0,0" Content="Website redirects are added" Focusable="False" IsHitTestVisible="False"/>
                                        <CheckBox x:Name="CBoxSvcsCertsAdded" Height="24" Margin="0,4,0,0" Content="Website certificates are added" Focusable="False" IsHitTestVisible="False"/>
                                        <CheckBox x:Name="CBoxSvcsServRunning" Height="24" Margin="0,4,0,0" Content="Website server is running" Focusable="False" IsHitTestVisible="False"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Game Versions">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.55*"/>
                        <ColumnDefinition Width="0.45*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Margin="4,4,4,4" Padding="4,4,4,4" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2" SnapsToDevicePixels="true">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                    <Label Height="24" FontWeight="Bold" Content="Game:"/>
                                    <StackPanel Margin="16,4,0,0" Orientation="Horizontal">
                                        <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                            <Label Height="24" Margin="0,0,0,0" Content="Executable Path"/>
                                            <Label Height="24" Margin="0,4,0,0" Content="Launch Game"/>
                                            <Label Height="24" Margin="0,4,0,0" Content="Branch"/>
                                        </StackPanel>
                                        <StackPanel Margin="4,0,0,0" Orientation="Vertical">
                                            <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                                <TextBox x:Name="TBoxVersPath" Style="{DynamicResource Style.TextBox.1}" Width="288" Height="24" Margin="0,0,0,0" Tag="Path to FSD-Win64-Shipping.exe" TextChanged="TBoxVersPath_TextChanged">
                                                    <TextBox.ToolTip>
                                                        <ToolTip Content="Path to `Deep Rock Galactic\FSD\Binaries\Win64\FSD-Win64-Shipping.exe`"/>
                                                    </TextBox.ToolTip>
                                                </TextBox>
                                                <Button x:Name="BtnVersBrowse" Width="96" Height="24" Margin="4,0,0,0" Content="Browse" Click="BtnVersBrowse_Click">
                                                    <Button.ToolTip>
                                                        <ToolTip Content="Set executable path using File Explorer."/>
                                                    </Button.ToolTip>
                                                </Button>
                                            </StackPanel>
                                            <Button x:Name="BtnVersLaunch" Width="96" Height="24" Margin="0,4,0,0" Content="Launch" Click="BtnVersLaunch_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Launch the game using Goldberg Steam Emulator."/>
                                                </Button.ToolTip>
                                            </Button>
                                            <ComboBox x:Name="CBoxVerBranch" Width="128" Height="24" Margin="0,4,0,0" SelectionChanged="CBoxVerBranch_SelectionChanged" IsEnabled="False">
                                                <ComboBox.ToolTip>
                                                    <ToolTip Content="Select the game branch."/>
                                                </ComboBox.ToolTip>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,16,0,0" Orientation="Vertical">
                                    <Label Height="24" FontWeight="Bold" Content="Goldberg Steam Emulator:"/>
                                    <StackPanel Margin="16,4,0,0" Orientation="Horizontal">
                                        <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                            <Label Height="24" Margin="0,0,0,0" Content="Player Id"/>
                                            <Label Height="24" Margin="0,4,0,0" Content="Player Name"/>
                                            <Label Height="24" Margin="0,4,0,0" Content="Launch Parameters"/>
                                        </StackPanel>
                                        <StackPanel Margin="4,0,0,0" Orientation="Vertical">
                                            <TextBox x:Name="TBoxVersPlrId" Style="{DynamicResource Style.TextBox.1}" Width="160" Height="24" Margin="0,0,0,0" Tag="76561198085278322" TextChanged="TBoxVersPlrId_TextChanged">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="Player id that is used for loading correct save file."/>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                            <TextBox x:Name="TBoxVersPlrName" Width="160" Height="24" Margin="0,4,0,0" TextChanged="TBoxVersPlrName_TextChanged" LostFocus="TBoxVersPlrName_LostFocus">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="Player name that is displayed in the game."/>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                            <TextBox x:Name="TBoxVersCmdLnch" Width="160" Height="24" Margin="0,4,0,0" TextChanged="TBoxVersCmdLnch_TextChanged">
                                                <TextBox.ToolTip>
                                                    <ToolTip Content="Launch parameters for the game."/>
                                                </TextBox.ToolTip>
                                            </TextBox>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,16,0,0" Orientation="Vertical">
                                    <Label Height="24" FontWeight="Bold" Content="Steam:"/>
                                    <StackPanel Margin="16,4,0,0" Orientation="Horizontal">
                                        <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                            <Label Height="24" Margin="0,0,0,0" Content="Depot Command"/>
                                            <Label Height="24" Margin="0,4,0,0" Content="Console"/>
                                        </StackPanel>
                                        <StackPanel Margin="4,0,0,0" Orientation="Vertical">
                                            <Button x:Name="BtnVersCmdDepotCopy" Width="96" Height="24" Margin="0,0,0,0" Content="Copy" Click="BtnVersCmdDepotCopy_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Copy Steam depot download command to the clipboard."/>
                                                </Button.ToolTip>
                                            </Button>
                                            <Button x:Name="BtnVersSteamOpen" Width="96" Height="24" Margin="0,4,0,0" Content="Open" Click="BtnVersSteamOpen_Click">
                                                <Button.ToolTip>
                                                    <ToolTip Content="Open Steam console. (Steam must be running)."/>
                                                </Button.ToolTip>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    <TabControl Grid.Column="1" Margin="4,4,4,4">
                        <TabItem Header="Default">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="4,4,4,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="BtnVerRldData" Style="{DynamicResource Style.Button.1}" Width="24" Height="24" HorizontalAlignment="Center" Margin="0,0,2,0" Click="BtnAppRldData_Click">
                                        <Button.ToolTip>
                                            <ToolTip Content="Reload application data."/>
                                        </Button.ToolTip>
                                    </Button>
                                    <TextBox x:Name="TBoxVersSearch" Height="24" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2,0,0,0" Tag="Search: Number, Name" TextChanged="TBoxVersSearch_TextChanged"/>
                                </Grid>
                                <ListView x:Name="VListVers" Grid.Row="1" Margin="4,4,4,0" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="VListVers_SelectionChanged">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2">
                                                <StackPanel Orientation="Horizontal" Background="{Binding BrushBack}">
                                                    <Label Content="{Binding Number}" Width="108" Height="24" FontSize="14"/>
                                                    <Label Content="{Binding Name}" Height="24" FontSize="14"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListViewItem}">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                                <Button x:Name="BtnVersDeselect" Height="24" Grid.Row="2" HorizontalAlignment="Stretch" Margin="4,4,4,0" Content="Deselect" Click="BtnVersDeselect_Click"/>
                                <Grid Grid.Row="3" Margin="4,4,4,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Height="24" Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,2,0" Content="Add" IsEnabled="False"/>
                                    <Button Height="24" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2,0,0,0" Content="Remove" IsEnabled="False"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Mods">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.25*"/>
                        <RowDefinition Height="0.75*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.55*"/>
                        <ColumnDefinition Width="0.45*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Grid.Row="0" Margin="4,4,4,4" Padding="4,4,4,4" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2" SnapsToDevicePixels="true">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                    <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                            <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                                                <Label Height="24" Content="Mods"/>
                                            </StackPanel>
                                            <StackPanel Margin="4,0,0,0" Orientation="Vertical">
                                                <Button x:Name="BtnModsBackup" Width="96" Height="24" Margin="0,0,0,0" Content="Backup" Click="BtnModsBackup_Click">
                                                    <Button.ToolTip>
                                                        <ToolTip Content="Save mods that have latest date to `Save\Mods\VERSION` folder."/>
                                                    </Button.ToolTip>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    <Border Grid.Column="0" Grid.Row="1" Margin="4,4,4,4" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2" SnapsToDevicePixels="true">
                        <RichTextBox x:Name="RTBoxModsDescription" BorderThickness="0" Foreground="#FFE0E0E0" FontSize="14" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Margin="4,4,4,4"/>
                    </Border>
                    <TabControl Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Margin="4,4,4,4">
                        <TabItem Header="Default">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="4,4,4,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="BtnModsRldData" Style="{DynamicResource Style.Button.1}" Width="24" Height="24" HorizontalAlignment="Center" Margin="0,0,2,0" Click="BtnAppRldData_Click">
                                        <Button.ToolTip>
                                            <ToolTip Content="Reload application data."/>
                                        </Button.ToolTip>
                                    </Button>
                                    <TextBox x:Name="TBoxModsSearch" Height="24" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2,0,0,0" Tag="Search: Number, Name" TextChanged="TBoxModsSearch_TextChanged"/>
                                </Grid>
                                <ListView x:Name="VListMods" Grid.Row="1" Margin="4,4,4,0" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="VListMods_SelectionChanged">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="2,2,2,2">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="72"/>
                                                        <ColumnDefinition Width="24"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="0,0,2,0">
                                                        <Label Height="24" FontSize="14" HorizontalContentAlignment="Center" Content="{Binding Number}"/>
                                                    </Border>
                                                    <Border Grid.Column="1" Background="{Binding BrushBack}" BorderBrush="{DynamicResource Brush.Content.Border}" BorderThickness="0,0,2,0">
                                                        <CheckBox Height="24" HorizontalAlignment="Center" Content="" IsChecked="{Binding IsEnabled}" Click="CBoxModsModIsEnabled_Click"/>
                                                    </Border>
                                                    <Border Grid.Column="2" Background="{Binding BrushBack}" BorderThickness="0">
                                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                            <Grid Margin="4,0,0,0">
                                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                                    <Label Height="24" FontSize="14" HorizontalContentAlignment="Right" Content="Name:"/>
                                                                    <Label Height="24" FontSize="14" HorizontalContentAlignment="Right" Content="Date:"/>
                                                                </StackPanel>
                                                            </Grid>
                                                            <Grid Margin="4,0,0,0">
                                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                                    <Label Height="24" FontSize="14" Content="{Binding Name}"/>
                                                                    <Label Height="24" FontSize="14" Content="{Binding Date}"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListViewItem}">
