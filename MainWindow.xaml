                                        <ToolTip Content="Show Deep Dives that don't have seed. Selecting them will not create correct Deep Dive and Deep Dive Elite."/>
                                    </CheckBox.ToolTip>
                                </CheckBox>
                            </Canvas>
                        </ScrollViewer>
                    </Border>
                    <Border Margin="8,8,8,8" BorderBrush="#FF202020" BorderThickness="4,4,4,4" Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <Canvas Height="368" Width="644" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,8,8,8">
                                <Label Height="26" Canvas.Left="0" Canvas.Top="0" Content="Normal:"/>
