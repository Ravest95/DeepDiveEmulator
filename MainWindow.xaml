                                <ComboBox x:Name="CBoxDDNorReg" Width="192" Height="26" Canvas.Left="64" Canvas.Top="30"/>
                                <Label Height="26" Canvas.Left="16" Canvas.Top="60"  Content="Mission:"/>
                                <ComboBox x:Name="CBoxDDNorMisT1" Width="128" Height="26" Canvas.Left="32" Canvas.Top="90"/>
                                <ComboBox x:Name="CBoxDDNorMisT2" Width="128" Height="26" Canvas.Left="32" Canvas.Top="120"/>
                                <ComboBox x:Name="CBoxDDNorMisT3" Width="128" Height="26" Canvas.Left="32" Canvas.Top="150"/>
                                <TextBox x:Name="TBoxDDNorMisV1" Width="32" Height="26" Canvas.Left="164" Canvas.Top="90"/>
                                <TextBox x:Name="TBoxDDNorMisV2" Width="32" Height="26" Canvas.Left="164" Canvas.Top="120"/>
                                <TextBox x:Name="TBoxDDNorMisV3" Width="32" Height="26" Canvas.Left="164" Canvas.Top="150"/>
                                <Label Height="26" Canvas.Left="184" Canvas.Top="60" Content="Side Objective:"/>
                                <ComboBox x:Name="CBoxDDNorObjT1" Width="144" Height="26" Canvas.Left="200" Canvas.Top="90"/>
                                <ComboBox x:Name="CBoxDDNorObjT2" Width="144" Height="26" Canvas.Left="200" Canvas.Top="120"/>
                                <ComboBox x:Name="CBoxDDNorObjT3" Width="144" Height="26" Canvas.Left="200" Canvas.Top="150"/>
                                <TextBox x:Name="TBoxDDNorObjV1" Width="32" Height="26" Canvas.Left="348" Canvas.Top="90"/>
                                <TextBox x:Name="TBoxDDNorObjV2" Width="32" Height="26" Canvas.Left="348" Canvas.Top="120"/>
                                <TextBox x:Name="TBoxDDNorObjV3" Width="32" Height="26" Canvas.Left="348" Canvas.Top="150"/>
                                <Label Height="26" Canvas.Left="368" Canvas.Top="60" Content="Warning:"/>
                                <ComboBox x:Name="CBoxDDNorWar1" Width="128" Height="26" Canvas.Left="384" Canvas.Top="90"/>
                                <ComboBox x:Name="CBoxDDNorWar2" Width="128" Height="26" Canvas.Left="384" Canvas.Top="120"/>
                                <ComboBox x:Name="CBoxDDNorWar3" Width="128" Height="26" Canvas.Left="384" Canvas.Top="150"/>
                                <Label Height="26" Canvas.Left="500" Canvas.Top="60" Content="Anomaly:"/>
                                <ComboBox x:Name="CBoxDDNorAno1" Width="128" Height="26" Canvas.Left="516" Canvas.Top="90"/>
                                <ComboBox x:Name="CBoxDDNorAno2" Width="128" Height="26" Canvas.Left="516" Canvas.Top="120"/>
                                <ComboBox x:Name="CBoxDDNorAno3" Width="128" Height="26" Canvas.Left="516" Canvas.Top="150"/>
                                <Label Height="26" Canvas.Top="192" Canvas.Left="0" Content="Elite:"/>
                                <Label Height="26" Canvas.Left="16" Canvas.Top="222"  Content="Region" />
